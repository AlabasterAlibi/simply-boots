{
  "schemaVersion": 1,
  "id": "simplyboots",
  "version": "${version}",

  "name": "Simply Boots",
  "description": "Adds multiple Terraria-themed boots.",
  "authors": [
    "AlabasterAlibi"
  ],
  "contact": {
    "sources": "https://github.com/AlabasterAlibi/simply-boots"
  },

  "license": "LGPL-3.0",
  "icon": "assets/simplyboots/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "io.github.alabasteralibi.simplyboots.SimplyBoots"
    ],
    "client": [
      "io.github.alabasteralibi.simplyboots.SimplyBootsClient"
    ],
    "cardinal-components": [
      "io.github.alabasteralibi.simplyboots.components.BootComponents"
    ]
  },
  "mixins": [
    "simplyboots.mixins.json"
  ],

  "depends": {
    "fabricloader": "*",
    "fabric-api": "*",
    "minecraft": ">=1.20.1",
    "geckolib": "*"
  },

  "custom": {
    "cardinal-components": [
      "simplyboots:rocket_boots",
      "simplyboots:lava_boots"
    ]
  }
}
